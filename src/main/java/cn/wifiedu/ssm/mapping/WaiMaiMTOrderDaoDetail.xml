<mapper namespace="waiMaiMTOrderDetail" >
  <resultMap id="BaseResultMap" type="java.util.HashMap" ></resultMap>
  <parameterMap id="BaseParameterMap" type="java.util.HashMap" ></parameterMap>
	
	<!-- 插入外卖订单详情信息 -->
	<insert id="insertBatchMTWMFoods" parameterMap="BaseParameterMap" >
		INSERT INTO sc_mt_order_detail
		(
			MT_ORDER_DETAIL_ID,
			APP_FOOD_CODE,
			FOOD_NAME,
			SKU_ID,
			QUANTITY,
			PRICE,
			BOX_NUM,
			BOX_PRICE,
			UNIT,
			FOOD_DISCOUNT,
			FOOD_PROPERTY,
			CARD_ID,
			CREATE_TIME
		)
		VALUES
		<foreach collection="foods" item="item" separator=",">
		(
			#{UUID}, 
			#{item.app_food_code}, 
			#{item.food_name}, 
			#{item.sku_id}, 
			#{item.quantity},
			#{item.price}, 
			#{item.box_num}, 
			#{item.box_price}, 
			#{item.unit},
			#{item.food_discount}, 
			#{item.food_property}, 
			#{item.cart_id},
			NOW()
		)
		</foreach>	
	</insert>
	
